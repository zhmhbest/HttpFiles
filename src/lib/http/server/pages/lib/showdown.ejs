    /**
     * 提取公式
     */
     showdown.extension('latex', function () {
        // console.log("latex");
        const __D__ = '¨D';
        const __H__ = '(?<=\\r\\n|\\n|\\r)';
        const __T__ = '(?=\\r\\n|\\n|\\r)';
        return [
            {
                type: 'lang',
                regex: new RegExp(`${__H__}${__D__}${__D__}[\\s\\S]+?${__D__}${__D__}${__T__}`, 'g'),
                replace: function (text, matchArray) {
                    text = text.substr(__D__.length * 2, text.length - 4 * __D__.length);
                    return katex.renderToString(text, { throwOnError: false });
                }
            },
            {
                type: 'lang',
                regex: new RegExp(`${__D__}[\\s\\S]+?${__D__}`, 'g'),
                replace: function (text, matchArray) {
                    text = text.substr(__D__.length, text.length - 2 * __D__.length);
                    return katex.renderToString(text, { throwOnError: false });
                }
            },
        ]
    });
</script>