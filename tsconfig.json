{
    "compilerOptions": {
        // 输出配置
        "module": "CommonJS",
        "target": "ES6",
        // "sourceMap": true,
        // "declaration": true,
        "rootDir": "src/main",
        "outDir": "out",
        // 源码检查
        "allowJs": false,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": false,
        // "noImplicitAny": true,
        // "noImplicitThis": true,
        // "strictFunctionTypes": true,
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "node_modules",
        "target",
        "dist",
        "out"
    ]
}